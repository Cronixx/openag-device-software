{	
	"peripherals": {
		"sht25_1": {
			"verbose_name": "SHT25",
			"module": "sensor.sht25", 
			"class": "SHT25", 
			"communication": {
				"type": "i2c",
				"bus": "2", 
				"mux": "7", 
				"channel": "0", 
				"address": "0x40"
			},
			"variables": {
				"temperature": {
					"name": "air_temperature_celcius"
				},
				"humidity": {
					"name": "air_humidity_percent"
				}
			}
		},
        "light_panel_taurus_1": {
            "name": "light_panel_taurus_1",
            "verbose_name": "Light Panel",
            "module": "actuator.light_panel_taurus", 
            "class": "LightPanelTaurus", 
            "communication": {
                "type": "i2c",
                "bus": "2", 
                "mux": "7", 
                "channel": "6", 
                "address": "0x3c"
            },
            "variables": {
                "spectrum": {
                    "name": "light_spectrum_taurus"
                },
                "intensity": {
                    "name": "light_intensity_par"
                }
            },
            "options": {
                "pseudo_sensor_enabled": true
            }
        }
	}
}